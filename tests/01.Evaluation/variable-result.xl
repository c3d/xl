A : integer := 17
B : integer := 02
C : integer := 1969

function Index(I:text) as variable integer is
    if I = "A" then
        A
    else if I = "B" then
        B
    else
        C

ShowABC

Index("A") := 05

ShowABC

Index("B") := 12

ShowABC

Index("C") := 1968

ShowABC


ShowABC is
    print "A=", A, " B=", B, " C=", C
    print "Index(A)=", Index("A")
    print "Index(B)=", Index("B")
    print "Index(C)=", Index("C")
