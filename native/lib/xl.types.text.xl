module XL.TYPES.TEXT[character:type] is
// ----------------------------------------------------------------------------
//  Implementation of the text data type
// ----------------------------------------------------------------------------

    type text is string of character
    type slice is SLICE.slice[text]

    with
        Text    : text
        Slice   : slice

    Text as slice is
    // ------------------------------------------------------------------------
    //  Convert a text into a slice for the whole text
    // ------------------------------------------------------------------------
        slice(Text)
