// Test the result of the basic math operations

use XL.UI.CONSOLE

TAB : character := character(9)


WriteLn "POWER TABLES"
WriteLn "A", TAB, "B", TAB, "A^B", TAB, "A^(-B)"
for A in 10..14 loop
    for B in -3..6 loop
        WriteLn A, TAB, B, TAB, A^B, TAB, A^(-B)

for X in 10.0..14.0 step 0.25 loop
    for B in -3..6 loop
        WriteLn X, TAB, B, TAB, X^B, TAB, X^(-B)

for X in 10.0..14.0 step 0.25 loop
    for Y in -3.0..6.0 step 0.25 loop
        WriteLn X, TAB, Y, TAB, X^Y, TAB, X^(-Y)

