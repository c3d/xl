function EqualInt(A, B : integer)
    return boolean
    written A=B
    is XL.BYTECODE.equ_int
to CopyInt(out Tgt : integer; in Src : integer) written Tgt := Src is
    XL.BYTECODE.CopyInt

A : integer
if A = 0 then
    A := 1
