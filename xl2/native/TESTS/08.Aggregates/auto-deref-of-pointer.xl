import IO = XL.UI.CONSOLE
use XL.POINTER
use XL.POINTER.ADDRESS

Ptr : pointer to integer
Val : integer

Ptr := nil
Ptr := Ptr

type kudos is record with
   znort : integer
   zglop : real

PC : pointer to kudos

PC := nil

Ku : kudos
Ku.znort := 17
Ku.zglop := 42.123

PC := Address(Ku)

IO.WriteLn PC.znort, ";", PC.zglop
IO.WriteLn Ku.znort, ";", Ku.zglop

PC.zglop := 123.456
PC.znort := -1

IO.WriteLn PC.znort, ";", PC.zglop
IO.WriteLn Ku.znort, ";", Ku.zglop

