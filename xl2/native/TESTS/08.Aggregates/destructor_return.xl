use XL.UI.CONSOLE

to Delete (K : integer) is
    WriteLn "Deleted ", K

function Foo (I : integer) return integer is
   LocalVar : integer := I + 1

   if I = 0 then
       return 27

   result += I

WriteLn "Cas 1: ", Foo(1)
WriteLn "Cas 0: ", Foo(0)

Z : integer := 3
while Z < 12 loop
    exit if Z > 7
    WriteLn "Looping with Z=", Z
    Z += 2

for W in 1..18 loop
    exit if W > 5
    if W > 4 then
        lalalalere : integer := 777
        WriteLn "In inner block"
        exit
    WriteLn "Looping with W=", W

